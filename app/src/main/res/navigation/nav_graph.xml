<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/mapsActivity"
        android:name="com.suatzengin.i_love_animals.presentation.post_ad.MapsFragment"
        android:label="activity_maps"
        tools:layout="@layout/fragment_maps" />
    <fragment
        android:id="@+id/adListFragment"
        android:name="com.suatzengin.i_love_animals.presentation.ad_list.AdListFragment"
        android:label="fragment_ad_list"
        tools:layout="@layout/fragment_ad_list" >
        <action
            android:id="@+id/fromAdListToMaps"
            app:destination="@id/mapsActivity" />
        <action
            android:id="@+id/fromAdListToLogin"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.suatzengin.i_love_animals.presentation.auth.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/fromLoginToAdList"
            app:destination="@id/adListFragment"
            />
        <action
            android:id="@+id/fromLoginToRegister"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.suatzengin.i_love_animals.presentation.auth.register.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/fromRegisterToLogin"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true"
            />
    </fragment>
</navigation>